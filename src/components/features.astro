---
// @ts-ignore
import { Icon } from "astro-icon";

const features = [
  {
    title: "Me: main skills and tools:",
    description:
      "HTML, CSS, JavaScript, React, NextJS, MUI, Tailwind, Styled Components, VSCode, Git, Github, Figma, Slack. Trilingual in Portuguese, Spanish and English",
    icon: "mdi:face-man-profile",
  },
  {
    title: "This site:",
    description:
      "Build with Astro, Tailwind and Typescript. Hosted on Vercel. Google Lighthouse score: 100%",
    icon: "bx:bxs-data",
  },
];
---

<div class="mt-12 md:mt-0">
  <h2
    class="text-4xl lg:text-5xl font-bold lg:tracking-tight dark:text-slate-100">
    About
  </h2>
</div>

<div class="grid md:grid-cols-2 my-8 gap-8 lg:gap-16">
  {
    features.map((item) => (
      <div class="flex gap-4 items-start">
        <div class="mt-1 bg-black rounded-full  p-2 w-8 h-8 shrink-0">
          <Icon class="text-slate-50 stroke-slate-50" name={item.icon} />
        </div>
        <div>
          <h3 class="font-semibold text-lg dark:text-slate-100">
            {item.title}
          </h3>{" "}
          <p class="text-slate-500 mt-2 leading-relaxed dark:text-slate-200">
            {item.description}
          </p>
        </div>
      </div>
    ))
  }
</div>
